<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onore.project.mapper.ReviewMapper">
  <select id="getAll" resultType="com.onore.project.dto.ReviewDTO">
    SELECT * FROM reviews ORDER BY review_num DESC
  </select>
  
  <select id="get" resultType="com.onore.project.dto.ReviewDTO">
  	SELECT * FROM reviews WHERE review_num=#{review_num}
  </select>
  
  <insert id="insert" parameterType="com.onore.project.dto.ReviewDTO">
  	INSERT INTO reviews VALUES (
  		16,
  		9999,
  		'test3',
  		#{review_content},
  		SYSDATE,
  		#{review_rating},
  		null,
  		null,
  		null
  	)
  </insert>
</mapper>