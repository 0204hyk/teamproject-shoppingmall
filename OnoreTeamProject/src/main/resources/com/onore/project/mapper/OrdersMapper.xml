<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onore.project.mapper.OrdersMapper">
	<select id="getDailySales" parameterType="String" resultType="com.onore.project.dto.OrdersDTO"> 
		SELECT * FROM orders WHERE order_date >= TO_CHAR(sysdate-7,'YYYYMMDD')
 
 		<!-- 
		SELECT TO_CHAR(order_date, 'YYYYMMDD') , SUM(total_price) 
		FROM orders 
		WHERE order_date 
			BETWEEN TO_CHAR(sysdate-6,'YYYYMMDD') AND TO_CHAR(sysdate+1 , 'YYYYMMDD') 
		GROUP BY TO_CHAR(order_date, 'YYYYMMDD') 
		ORDER BY TO_CHAR(order_date, 'YYYYMMDD')
		 -->
	</select>
</mapper>