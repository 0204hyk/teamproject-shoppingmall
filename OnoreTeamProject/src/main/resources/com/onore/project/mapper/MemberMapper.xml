<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onore.project.mapper.MemberMapper">
	<insert id="updateMemberAddress" parameterType="com.onore.project.dto.MembersDTO">
		UPDATE members SET mem_zip_code=#{mem_zip_code}, mem_address=#{mem_address}, mem_detail_address=#{mem_detail_address}
		WHERE mem_id = #{mem_id}
	</insert>
	<select id="getMemberInfo" resultType="com.onore.project.dto.MembersDTO">
		SELECT * FROM members WHERE mem_id = #{mem_id}
	</select>
	<select id="getCoupons" resultType="com.onore.project.dto.CouponDTO">
		SELECT * FROM coupon WHERE mem_id = #{mem_id}
	</select>
</mapper>